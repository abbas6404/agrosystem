<%@page contentType="text/html" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html lang="bn">
<head>
    <title>নতুন নিবন্ধন</title>
    <link rel="stylesheet" href="${pageContext.request.contextPath}/css/style.css">
</head>
<body>
    <div class="form-page-container">
        <div class="form-container">
            <h2><i class="fas fa-user-plus"></i> নতুন কৃষক নিবন্ধন</h2>
            <p>আপনার সঠিক তথ্য দিয়ে নিচের ফর্মটি পূরণ করুন।</p>
            <% if (request.getAttribute("errorMessage") != null) { %><p class="alert alert-danger"><%= request.getAttribute("errorMessage") %></p><% } %>
            <form action="${pageContext.request.contextPath}/register" method="post">
                <div class="input-group"><label for="name">আপনার পুরো নাম</label><input type="text" id="name" name="name" required></div>
                <div class="input-group"><label for="phone">ফোন নম্বর</label><input type="text" id="phone" name="phone" required></div>
                <div class="input-group"><label for="password">পাসওয়ার্ড</label><input type="password" id="password" name="password" required></div>
                <div class="input-group"><label for="location">আপনার এলাকা</label><input type="text" id="location" name="location" required></div>
                <div class="input-group"><label for="landSize">জমির পরিমাণ (একরে)</label><input type="number" step="0.01" id="landSize" name="landSize" required></div>
                <div class="input-group"><label for="soil">মাটির ধরণ</label><textarea id="soil" name="soil" rows="3" placeholder="যেমন: দোআঁশ, বেলে, এঁটেল" required></textarea></div>
                <button type="submit">নিবন্ধন সম্পন্ন করুন</button>
            </form>
            <p class="form-link">ইতিমধ্যে অ্যাকাউন্ট আছে? <a href="login.jsp">লগইন করুন</a></p>
        </div>
    </div>
</body>
</html>